<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.beranda.NilaiTransaksiFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Birutua"
        android:orientation="vertical"
        android:paddingTop="9dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nilai Transaksi"
                android:textAlignment="center"
                android:textColor="@color/Putih"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp30.000"
                android:textAlignment="center"
                android:textColor="@color/Putih"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_background"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="33dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Pilih Paket"
                android:textColor="@color/Birutua"
                android:fontFamily="@font/poppins_bold"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/scan_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:drawableStart="@drawable/ic_print_black_24dp"
                android:text="Terhubung" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:animationCache="true"
                        android:backgroundTint="@color/Putih"
                        android:layout_margin="10dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="30dp"
                        tools:ignore="UnusedAttribute">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:targetApi="lollipop">

                            <TextView
                                android:id="@+id/btn1"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginBottom="9dp"
                                android:text="Cukur \nanak"
                                android:textColor="@color/Birutua"
                                android:fontFamily="@font/poppins_bold"
                                />
                            <RelativeLayout
                                android:id="@+id/collapsible"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="15dp"
                                android:focusableInTouchMode="true"
                                android:visibility="gone"
                                android:background="@drawable/tambah_background"
                                android:layout_marginStart="29dp"
                                android:layout_width="90dp"
                                android:layout_height="30dp">

                                <ImageView
                                    android:id="@+id/minus"
                                    android:layout_width="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_remove_circle_outline_blue"/>
                                <ImageView
                                    android:id="@+id/plus"
                                    android:layout_width="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_add_circle_outline_blue"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:targetApi="lollipop">
                            <TextView
                                android:id="@+id/btn2"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginBottom="9dp"
                                android:text="Cukur \nDewasa"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/Birutua"
                                />

                            <RelativeLayout
                                android:id="@+id/a"
                                android:visibility="gone"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="15dp"
                                android:focusableInTouchMode="true"
                                android:background="@drawable/tambah_background"
                                android:layout_marginStart="29dp"
                                android:layout_width="90dp"
                                android:layout_height="30dp">

                                <ImageView
                                    android:id="@+id/min"
                                    android:layout_width="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_remove_circle_outline_blue"/>

<!--                                <EditText-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_centerInParent="true"-->
<!--                                    android:gravity="center"-->
<!--                                    android:inputType="number"-->
<!--                                    android:maxLength="13"-->
<!--                                    android:minWidth="200dp"-->
<!--                                    android:text="0"-->
<!--                                    android:textColor="@color/Putih"-->
<!--                                    android:textSize="12sp"-->
<!--                                    />-->
                                <ImageView
                                    android:id="@+id/ples"
                                    android:layout_width="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_add_circle_outline_blue"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <com.google.android.material.card.MaterialCardView

                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:backgroundTint="@color/Putih"
                        android:layout_margin="10dp"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="30dp"
                        tools:ignore="UnusedAttribute">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:targetApi="lollipop">

                            <TextView
                                android:id="@+id/btn3"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginBottom="9dp"
                                android:text="Cuci \nRambut"
                                android:textColor="@color/Birutua"
                                android:fontFamily="@font/poppins_bold"
                                />
                            <RelativeLayout
                                android:id="@+id/b"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="15dp"
                                android:focusableInTouchMode="true"
                                android:visibility="gone"
                                android:background="@drawable/tambah_background"
                                android:layout_marginStart="29dp"
                                android:layout_width="90dp"
                                android:layout_height="30dp">

                                <ImageView
                                    android:id="@+id/kurang"
                                    android:layout_width="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_remove_circle_outline_blue"/>

<!--                                <EditText-->
<!--                                    android:id="@+id/tot"-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_centerInParent="true"-->
<!--                                    android:gravity="center"-->
<!--                                    android:inputType="number"-->
<!--                                    android:maxLength="13"-->
<!--                                    android:minWidth="40dp"-->
<!--                                    android:text="0"-->
<!--                                    android:textColor="@color/Putih"-->
<!--                                    android:textSize="12sp"-->
<!--                                    />-->
                                <ImageView
                                    android:id="@+id/tambah"
                                    android:layout_width="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_add_circle_outline_blue"/>
                            </RelativeLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView

                        android:layout_width="147dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:targetApi="lollipop">
                            <TextView
                                android:id="@+id/btn4"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginStart="21dp"
                                android:layout_marginBottom="9dp"
                                android:text="Cukur \nBrewoks"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/Birutua"
                                />

                            <RelativeLayout
                                android:id="@+id/c"
                                android:visibility="gone"
                                android:layout_marginTop="40dp"
                                android:layout_marginBottom="15dp"
                                android:focusableInTouchMode="true"
                                android:background="@drawable/tambah_background"
                                android:layout_marginStart="29dp"
                                android:layout_width="90dp"
                                android:layout_height="30dp">

                                <ImageView
                                    android:id="@+id/negatif"
                                    android:layout_width="20dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_remove_circle_outline_blue"/>

<!--                                <EditText-->
<!--                                    android:layout_width="wrap_content"-->
<!--                                    android:layout_height="wrap_content"-->
<!--                                    android:layout_centerInParent="true"-->
<!--                                    android:gravity="center"-->
<!--                                    android:inputType="number"-->
<!--                                    android:maxLength="13"-->
<!--                                    android:minWidth="40dp"-->
<!--                                    android:text="0"-->
<!--                                    android:textColor="@color/Putih"-->
<!--                                    android:textSize="12sp"/>-->
                                <ImageView
                                    android:id="@+id/positif"
                                    android:layout_width="20dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_add_circle_outline_blue"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttoncetak"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="33dp"
                android:background="@drawable/btnclose_background"
                android:elevation="10dp"
                android:text="Cetak"
                android:textColor="@color/Putih"
                android:textStyle="bold"
                tools:targetApi="lollipop" />
        </RelativeLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>